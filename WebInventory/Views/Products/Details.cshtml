@model WebInventory.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Producto</h1>
<div class="card">
    <div class="card-body bg-light">        
        <div class="row g-0">
                <div class="col-md-4">
                    <img id="ImageView" src="@("~/uploads/img/product/"+Model.Image)" asp-append-version="true" width="250px" height="250px" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Alias)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Alias)
                        </dd>
                        <hr />
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id_Category)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CategoryNombre().Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id_Type)
                        </dt>
                        <!--Para acceder al nombre del Id_Type usar el metodo del nombre y lo que se desea devolver-->
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TypeNombre().Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Brand)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Brand)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Image)
                        </dd>
                    </dl>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id_Product">Editar</a> |
                        <a asp-action="Index">Volver a la lista</a>
                    </div>
                </div>
         </div>        
    </div>
</div>