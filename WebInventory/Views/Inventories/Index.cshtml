@model IEnumerable<WebInventory.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Deposito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit_Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Deposito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit_Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Cost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Inventory">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Inventory">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Inventory">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
